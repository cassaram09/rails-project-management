<%= form_for(responsibility) do |f| %>
  <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Name" %>
  <%= f.label :description %>
    <%= f.text_field :description, placeholder: "Description" %>
  <%= f.label :status %>
    <% Responsibility.statuses.each do |s,index| %>
      <%= s.capitalize %>
      <%= f.radio_button :status, s %>
    <% end %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.submit class: "btn btn-default" %>
<% end %>